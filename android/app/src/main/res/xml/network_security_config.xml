<?xml version="1.0" encoding="utf-8"?>
<!-- Garante que HTTP (cleartext) funcione no build release como no debug.
     Muitos streams IPTV/VOD usam http://. Sem isso, o release pode bloquear. -->
<network-security-config>
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>
